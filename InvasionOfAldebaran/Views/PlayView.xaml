<UserControl x:Class="InvasionOfAldebaran.Views.PlayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:InvasionOfAldebaran.Views"
			 xmlns:vm="clr-namespace:InvasionOfAldebaran.ViewModels"
             mc:Ignorable="d" Focusable="False"
			 d:DataContext="{d:DesignInstance vm:PlayViewModel}"
             d:DesignHeight="850" d:DesignWidth="850">
	<Grid Background="DarkGray">
		<Grid.RowDefinitions>
			<RowDefinition Height="80" />
			<RowDefinition Height="*" />
			<RowDefinition Height="40" />
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="{Binding Canvas.Width}" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!-- Question -->
		<Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Visibility="Visible" BorderBrush="Black" BorderThickness="3">
			<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding CurrentQuestion.Text}"
				   FontSize="22" FontWeight="Bold" Foreground="Red" />
		</Border>
		<!-- Canvas -->
		<Canvas Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top">
			<ContentPresenter Content="{Binding Canvas}" />
		</Canvas>

		<!-- Answers -->
		<StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" CanVerticallyScroll="True">
			<!-- Points -->
			<TextBlock Text="{Binding Points, StringFormat='Points:  {0}'}" Foreground="DodgerBlue" FontSize="28" FontWeight="Bold" 
					   HorizontalAlignment="Center" Margin="0 30 0 0"/>
			<!-- Answers -->
			<ItemsControl Margin="0 50 0 0">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="50" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Image Grid.Column="0" Grid.Row="0" Source="{Binding CurrentQuestion.Answers[0].Source}" Margin="5 0"
						   HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="Fant" Stretch="Fill" Width="30" Height="30"/>
					<TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding CurrentQuestion.Answers[0].Text}" FontSize="24" 
							   FontWeight="ExtraBold" HorizontalAlignment="Left" Foreground="DodgerBlue"/>
				</Grid>
			</ItemsControl>
			<Border Visibility="Visible" BorderBrush="Black" BorderThickness="1" Margin="0 10 0 10"/>
			<ItemsControl>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="50" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Image Grid.Column="0" Grid.Row="0" Source="{Binding CurrentQuestion.Answers[1].Source}" Margin="5 0"
			               HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="Fant" Stretch="Fill" Width="30" Height="30"/>
					<TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding CurrentQuestion.Answers[1].Text}" FontSize="24" 
			                   FontWeight="ExtraBold" HorizontalAlignment="Left" Foreground="DodgerBlue"/>
				</Grid>
			</ItemsControl>
			<Border Visibility="Visible" BorderBrush="Black" BorderThickness="1" Margin="0 10 0 10"/>
			<ItemsControl >
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="50" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Image Grid.Column="0" Grid.Row="0" Source="{Binding CurrentQuestion.Answers[2].Source}" Margin="5 0"
					       HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="Fant" Stretch="Fill" Width="30" Height="30"/>
					<TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding CurrentQuestion.Answers[2].Text}" FontSize="24" 
					           FontWeight="ExtraBold" HorizontalAlignment="Left" Foreground="DodgerBlue"/>
				</Grid>
			</ItemsControl>
			<Border Visibility="Visible" BorderBrush="Black" BorderThickness="1" Margin="0 10 0 10"/>
			<ItemsControl >
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="50" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Image Grid.Column="0" Grid.Row="0" Source="{Binding CurrentQuestion.Answers[3].Source}" Margin="5 0"
			               HorizontalAlignment="Center" RenderOptions.BitmapScalingMode="Fant" Stretch="Fill" Width="30" Height="30"/>
					<TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding CurrentQuestion.Answers[3].Text}" FontSize="24" 
			                   FontWeight="ExtraBold" HorizontalAlignment="Left" Foreground="DodgerBlue"/>
				</Grid>
			</ItemsControl>
		</StackPanel>
		<!-- Hit Messages & Wave Number -->
		<Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Visibility="Visible" BorderBrush="Black" BorderThickness="3" >
			<Grid>
				<TextBlock Text="{Binding Message}" Foreground="Red" FontSize="20" Margin="80 0"
				           HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
				<TextBlock Text="{Binding CurrentWave, StringFormat='Wave: {0}'}" HorizontalAlignment="Right" 
						   VerticalAlignment="Center" Foreground="DodgerBlue" FontSize="20" Margin="80 0" FontWeight="Bold"/>
			</Grid>
		</Border>
	</Grid>
</UserControl>